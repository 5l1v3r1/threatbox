    john,
    jq,
    libgmp-dev,
    libbz2-dev,
    libffi-dev,
    libpcap-dev,
    libpcap0.8,
    libssl-dev,
    nmap,
    nuget,
    mosh,
    p7zip-full,
    pkg-config,
    python-crypto,
    python-dev,
    python-libpcap,
    python-lzma,
    python-pip,
    python3,
    python3.7,
    python3.7-dev,
    python3-pip,
    python3-apt,
    python-crypto,
    python-pyasn1,
    python-twisted-core
    virtualenv,
    python3-setuptools,
    smbclient,
    tcpdump,
    tightvncserver,
    tmux,
    unrar,
    wget,
    wireshark,
    xfce4,
    xfce4-goodies,
    xfce4-terminal,
    unzip,
    openjdk-8-jdk,
    openjdk-8-jre,
    binwalk,
    tigervnc-standalone-server,
    tigervnc-xorg-extension,
